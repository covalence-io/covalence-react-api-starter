{
  "name": "covalence-react-api-starter",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:postcss": "npx postcss ./public/css/styles.css -o ./public/css/styles.min.css -u autoprefixer cssnano",
    "build:scss": "npx node-sass src/client/scss/main.scss public/css/styles.css",
    "build:ts": "npx webpack",
    "build": "npm-run-all --parallel build:*",
    "dev": "npm-run-all --parallel watch:*",
    "start": "node dist/server.js",
    "watch:postcss": "npm run build:postcss -- -w",
    "watch:scss": "npm run build:scss -- --watch src/client/scss --recursive",
    "watch:server": "npx nodemon dist/server.js -w dist",
    "watch:ts": "npm run build:ts -- -w"
  },
